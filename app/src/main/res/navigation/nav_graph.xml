<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.newhabit.presentation.habitList.HabitListFragment"
        android:label="@string/title_habit_list"
        tools:layout="@layout/fragment_habit_list" >

        <action
            android:id="@+id/action_habitList_to_habitForm"
            app:destination="@id/habitFormFragment" />
        <action
            android:id="@+id/action_habitList_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/habitFormFragment"
        android:name="com.example.newhabit.presentation.form.HabitFormFragment"
        android:label="@string/title_habit_form" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.newhabit.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>